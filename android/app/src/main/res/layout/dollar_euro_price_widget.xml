
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:background="@android:color/transparent"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:background="@drawable/main_shape"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:src="@drawable/euro" />

            <TextView
                android:id="@+id/txt_euro"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="900"
                android:textSize="24sp"
                tools:text="@string/europe_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            android:gravity="end"
            android:orientation="vertical"
            android:weightSum="3"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/txt_date_euro"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                tools:text="@string/date" />

            <TextView
                android:id="@+id/txt_euro_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="900"
                android:textSize="22sp"
                tools:text="@string/usd_price" />

            <TextView
                android:id="@+id/txt_euro_percent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="400"
                android:textSize="14sp"
                tools:text="@string/percent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/main_shape"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2"
            tools:ignore="NestedWeights">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corners"
                android:src="@drawable/usa" />

            <TextView
                android:id="@+id/txt_dollar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="900"
                android:textSize="24sp"
                tools:text="@string/dollar_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="3"
            android:gravity="end"
            android:orientation="vertical"
            android:weightSum="3"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/txt_usd_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="400"
                android:textSize="12sp"
                tools:text="@string/date" />

            <TextView
                android:id="@+id/txt_usd_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="900"
                android:textSize="22sp"
                tools:text="@string/usd_price" />

            <TextView
                android:id="@+id/txt_usd_percent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textFontWeight="400"
                android:textSize="14sp"
                tools:text="@string/percent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>